(in-package :projecto1)


;menu que inicia o jogo

(defun menuPrincipal ()
  (progn
    (format t "««««««««««««««««««««««««««««")(terpri)
    (format t "                           «")(terpri)
    (format t "      PUZZLE SOLITÁRIO     «")(terpri)
    (format t "                           «")(terpri)
    (format t "   1- Escolher Tabuleiro   «")(terpri)
    (format t "                           «")(terpri)
    (format t "   0- Sair                 «")(terpri)
    (format t "                           «")(terpri)
    (format t "««««««««««««««««««««««««««««")(terpri)
    (format t "                            ")(terpri)
    (format t "Escolha uma opção: ")
  )
  (let ((op(read)))
    (cond
      ((= op 1) (menuTabuleiro)) ;menuTabuleiro vai servir para escolher os tabuleiros
      ((= op 0)(format t "Saiu da área de Jogo"))
      (T(progn
          (format t "Opção Inválida!")(terpri)
          (menuPrincipal)
        )
      )
    )
  )
)


