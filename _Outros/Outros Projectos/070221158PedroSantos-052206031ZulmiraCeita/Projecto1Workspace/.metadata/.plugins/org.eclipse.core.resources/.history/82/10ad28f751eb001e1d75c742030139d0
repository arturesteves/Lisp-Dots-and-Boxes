;(le_problemas "D:/PEDRO/Development/Eclipse/projecto1/Problemas.dat")



(defun le_problemas (caminho)
(with-open-file (f caminho
:direction :input
:if-exists NIL
:if-does-not-exist :error)
(read f)
)
)


(defun converteLetras (letra)
  (- (char-code letra) 97)
)

